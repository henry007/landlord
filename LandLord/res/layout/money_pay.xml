<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="240dp"
    android:background="@drawable/shape_bg" >
    <Button
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/shape_back"
        android:textColor="@android:color/white" />
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="260dp"
        android:layout_height="200dp"
        android:layout_below="@id/btn_ok"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" >
        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_ok"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="报名参赛需要：\n100个金币或者1个红桃\n你有99999金币或857红桃"
            android:textColor="@android:color/white" />
        <Button
            android:id="@+id/btn_pay_by_gold"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="94dp"
            android:layout_marginTop="18dp"
        	android:textSize="16sp"
            android:background="@drawable/net_btn"
            android:text="金币支付"
            android:textColor="@android:color/white" />
        <Button
            android:id="@+id/btn_pay_by_ingot"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_pay_by_gold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
        	android:textSize="16sp"
            android:background="@drawable/net_btn"
            android:text="红桃支付"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</RelativeLayout>