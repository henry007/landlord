<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent">
    <!--  
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:src="@drawable/light_online_store"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" android:layout_marginTop="10dp"
        android:scaleType="fitXY" />
        -->

    <GridView android:id="@+id/gv_online_store"
        android:layout_width="240dp" android:layout_height="160dp"
        android:layout_marginTop="24dp" android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true" android:background="@drawable/bg_tab_purple"
        android:columnWidth="68dp" android:gravity="center"
        android:horizontalSpacing="5dp" android:verticalSpacing="5dp"
        android:numColumns="auto_fit" android:stretchMode="columnWidth"
        android:scrollbars="none" android:descendantFocusability="blocksDescendants" />
    <LinearLayout android:layout_width="120dp"
        android:layout_height="42dp" android:orientation="vertical"
        android:layout_below="@id/gv_online_store"
        android:layout_alignLeft="@id/gv_online_store" android:gravity="center"
        android:layout_marginTop="-25dp" android:layout_marginLeft="42dp"
        >
        <TextView android:id="@+id/gold" android:layout_width="100dp"
            android:layout_height="14dp" android:textSize="12sp"
            android:layout_weight="1" android:textColor="@android:color/white" 
            android:gravity="center"
            />
        
        <!-- 
        
        <TextView android:id="@+id/money" android:layout_width="100dp"
            android:layout_height="14dp" android:textSize="12sp"
            android:layout_weight="1" android:textColor="@android:color/white" />
        <TextView android:id="@+id/score" android:layout_width="100dp"
            android:layout_height="14dp" android:textSize="12sp"
            android:layout_weight="1" android:textColor="@android:color/white" />
 -->
    </LinearLayout>

    <Button android:id="@+id/btn_online_buy"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_btn_online_buy" />

</RelativeLayout>