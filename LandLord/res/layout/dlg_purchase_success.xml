<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp" android:layout_height="170dp"
    android:layout_gravity="center" 
    android:background="@drawable/shape_bg">

    <TextView android:id="@+id/tips_incompelete_payment" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" 
        android:layout_marginTop="40dp"
        android:gravity="center" android:text="@string/tips_purchase_success"
        android:textColor="@android:color/white" android:textSize="20sp" />
    <Button android:id="@+id/btn_ok"
        android:layout_width="110dp" 
        android:layout_height="50dp"
        android:layout_below="@id/tips_incompelete_payment"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/net_btn" 
        android:text="@string/ok"
        android:textColor="@android:color/white" 
        android:textSize="16sp"/>

</RelativeLayout>