<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:background="@drawable/shape_bg"
	android:padding="30dp">

	<TextView android:id="@+id/textView1" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true" 
		android:layout_marginTop="30dp"
		android:text="报名成功\n已报名X/3人，请等待开赛" 
		android:textColor="@android:color/white"
		android:textSize="20sp" 
		android:gravity="center" />
	<Button android:id="@+id/btn_ok" android:layout_width="110dp"
		android:layout_height="50dp" android:layout_below="@+id/textView1"
		android:layout_centerHorizontal="true" android:layout_marginTop="20dp"
		android:background="@drawable/net_btn" android:text="确定"
        android:textSize="16sp"
		android:textColor="@android:color/white" android:gravity="center" />

</RelativeLayout>