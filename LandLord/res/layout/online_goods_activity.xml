    <GridView 
        android:id="@+id/gv_online_goods"
        android:layout_width="240dp"
        android:layout_height="160dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_tab_purple"
        android:columnWidth="68dp"
        android:gravity="center"
        android:horizontalSpacing="5dp"
        android:verticalSpacing="5dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:scrollbars="none"></GridView>
    
    <Button
        android:id="@+id/btn_online_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_btn_online_save"/>

