<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
     >
     <LinearLayout 
         android:id="@+id/root_layout"
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        android:background="@drawable/bg_online_game_list_item"
        android:gravity="center_vertical"
        android:padding="1dp"
         >
    <TextView
        android:id="@+id/tv_game_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="快速挑战赛"
        android:textColor="@color/common_color"
        android:textStyle="italic"
        android:textSize="17sp" 
        android:layout_weight="2"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        />
    
     <TextView
        android:id="@+id/tv_player_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="100人"
          android:singleLine="true"
          android:layout_weight="1"
          android:textColor="@color/common_color"
        android:textStyle="italic"
        android:textSize="13sp" />
     
      <TextView
        android:id="@+id/tv_match_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="即使"
          android:singleLine="true"
          android:layout_weight="1"
         android:textColor="@color/common_color"
        android:textStyle="italic"
        android:textSize="13sp" />
         
     </LinearLayout>
     <LinearLayout 
         android:id="@+id/ll_expand"
         android:orientation="vertical"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/online_gamelist_expand_bg"
         android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
         >
    <TextView
        android:id="@+id/tv_game_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/common_color"
        android:textStyle="italic"
         />
    <ImageButton 
        android:id="@+id/btn_game_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_game_detail"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_gravity="right"
        android:background="@drawable/btn_detail_match"
        android:focusable="false"
        />
    </LinearLayout>
</LinearLayout>