<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="270"
                android:centerColor="#001761"
                android:centerY="0.75"
                android:endColor="#0081bf"
                android:startColor="#0081bf" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#0097ff"
                    android:centerY="0.75"
                    android:endColor="#000468"
                    android:startColor="#000468" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#00b3fc"
                    android:centerY="0.75"
                    android:endColor="#00007a"
                    android:startColor="#00b5ff" />
            </shape>
        </clip>
    </item>

</layer-list>